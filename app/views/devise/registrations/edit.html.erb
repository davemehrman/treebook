<div class="row">
  <div class="col-md-8">
    <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { class: "well", :method => :put }) do |f| %>
      <%= devise_error_messages! %>
      <fieldset>
        <legend>Edit <%= resource_name.to_s.humanize %></legend>
        <div class="form-group">
          <%= f.input :first_name, :autofocus => true %>
        </div>
        <div class="form-group">
          <%= f.input :last_name %>
        </div>
        <div class="form-group">
          <%= f.input :profile_name %>
        </div>
        <div class="form-group">
          <%= f.input :email %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="form-group">
          <%= f.input :password, :autocomplete => "off" %><i>(leave blank if you don't want to change it)</i>
        </div>
        <div class="form-group">
          <%= f.input :password_confirmation %>
        </div>
        <div class="form-group">
          <%= f.input :current_password %><i>(we need your current password to confirm your changes)</i>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Update", class: "btn btn-default" %>
        </div>
      </fieldset>
    <% end %>

    <h3>Cancel my account</h3>

    <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), class: "btn btn-default", :data => { :confirm => "Are you sure?" }, :method => :delete %></p>

    <%= link_to "Back", :back %>
  </div>
</div>